{
  "name": "noetic desktop-full",
  // "remoteUser": "root",

  "dockerFile": "Dockerfile",
  "build": {
    "args": { "ROS_DISTRO": "noetic" }
  },
  "runArgs": [
    "--privileged",
    "--network=host",
    "-e", "DISPLAY=${localEnv:DISPLAY}"
  ],
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/ubuntu/hust_ws/src/${localWorkspaceFolderBasename},type=bind",
    "workspaceFolder": "/home/ubuntu/hust_ws/",
  "mounts": [
     "source=${localEnv:HOME}${localEnv:USERPROFILE}/.bash_history,target=/home/vscode/.bash_history,type=bind",
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind"
  ]
  ,
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y python3-rosdep && sudo rosdep init || true && sudo rosdep update || true",
  "remoteUser": "ubuntu"
}
